%article
  %h2
    %a{href: @article.url}= @article.title

  = haml :_time

  = @article.contents.html

%section#comments

  <div id="disqus_thread"></div>
  :javascript
    var disqus_shortname  = 'iain'; // required: replace example with your forum shortname
    var disqus_identifier = '#{@article.disqus_id}';
    var disqus_url        = 'http://#{request.host}/#{@article.url}';
    var disqus_title      = "#{CGI.escapeHTML(@article.title)}";

    /* * * DON'T EDIT BELOW THIS LINE * * */
    (function() {
        var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
        dsq.src = 'http://' + disqus_shortname + '.disqus.com/embed.js';
        (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
    })();
